<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<suite name="Opencart App Test Chrome Suite" verbose="4" parallel="tests" thread-count="5">

	<listeners>

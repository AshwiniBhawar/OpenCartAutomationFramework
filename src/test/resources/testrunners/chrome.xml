<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<suite name="Opencart App Test Chrome Suite" verbose="4"
	parallel="tests" thread-count="5">

	<listeners>
		<listener class-name="com.aventstack.chaintest.plugins.ChainTestListener" />
		<listener class-name="com.qa.opencart.listeners.TestAllureListener" />
		<listener class-name="com.qa.opencart.listeners.RetryListener" />
	</listeners>

	<test name="Login Page Test_Chrome">
	<parameter name="browser" value="chrome" />
		<classes>
			<class name="com.qa.opencart.tests.LoginPageTest" />
		</classes>
	</test>
	
	<test name="Add Product To The Cart Page Test_Chrome">
	<parameter name="browser" value="chrome" />
		<classes>
			<class name="com.qa.opencart.tests.AddProductToTheCartPageTest" />
		</classes>
	</test>
	
